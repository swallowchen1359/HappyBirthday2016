<?xml version="1.0" encoding="utf-8"?>
<com.studio.swallowcharchar.happybirthday2016.photopage.view.PhotoDialogView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swallow="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_dialog_view"
    android:layout_width="270dp"
    android:layout_height="480dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <com.studio.swallowcharchar.happybirthday2016.photopage.view.PhotoGallery
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                swallow:photoSize="80dp"/>

        </LinearLayout>

    </LinearLayout>

</com.studio.swallowcharchar.happybirthday2016.photopage.view.PhotoDialogView>