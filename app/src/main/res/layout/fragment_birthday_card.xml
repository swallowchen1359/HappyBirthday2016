<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.studio.swallowcharchar.happybirthday2016.birthdaycardpage.controller.BirthdayCardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7">

        <com.studio.swallowcharchar.happybirthday2016.birthdaycardpage.view.BirthdayCardTopView
            android:id="@+id/birthday_card_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <com.studio.swallowcharchar.happybirthday2016.birthdaycardpage.view.BirthdayCardBotView
            android:id="@+id/birthday_card_bot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
