<?xml version="1.0" encoding="utf-8"?>
<com.studio.swallowcharchar.happybirthday2016.photopage.view.PhotoGalleryDialogView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swallow="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_dialog_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#90000000">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/photo_dialog_width"
        android:layout_height="@dimen/photo_dialog_height"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Top PhotoGallery : showing all pictures can be added -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.studio.swallowcharchar.happybirthday2016.photopage.view.PhotoGallery
                        android:id="@+id/photo_dialog_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        swallow:photoSize="75dp"/>

                </ScrollView>

            </LinearLayout>

            <!-- Border -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/rect_top_border"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@color/default_img_background"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.studio.swallowcharchar.happybirthday2016.photopage.view.PhotoGalleryDialogView>