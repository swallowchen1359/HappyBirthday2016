<?xml version="1.0" encoding="utf-8"?>
<com.studio.swallowcharchar.happybirthday2016.photopage.view.PhotoDialogView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_dialog_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Area to put date picker, for future use -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9">

                <DatePicker
                    android:id="@+id/photo_dialog_date_picker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:calendarTextColor="#ff000000"
                    android:datePickerMode="calendar"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.studio.swallowcharchar.happybirthday2016.photopage.view.PhotoDialogView>